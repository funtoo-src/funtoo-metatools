#!/usr/bin/python3

# This tool is designed to parse McAfee virus scanner logs and potentially do things with the
# output.
import os
import sys

from merge_utils.hub import Hub

if __name__ == "__main__":
	hub = Hub()
	hub.add("funtoo/merge")

	action = sys.argv[1]
	log_file = sys.argv[2]
	if not os.path.exists(log_file):
		print("Specified file not found.")
		sys.exit(1)
	for sha512 in hub.merge.fastpull.parse_mcafee_logs(log_file):
		db_ent = hub.FASTPULL.find_one({"hashes.sha512": sha512})
		print(sha512, db_ent)

