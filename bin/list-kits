#!/usr/bin/python3

# This command will list all kits in foundations.py, defined for a particular release specified on the command-line.
# example:
# $ list-kits 1.4-release

import sys
from funtoo.merge.tree import GitTree
from subpop.hub import Hub

import dyne.org.funtoo.metatools.merge as merge

hub = Hub()

if __name__ == "__main__":
	hub.set_model("org.funtoo.metatools/merge", release=sys.argv[1])
	# force init
	getattr(merge, "kits")
	hub.FIXUP_REPO = GitTree(
		"kit-fixups",
		hub.MERGE_CONFIG.branch("kit-fixups"),
		url=hub.MERGE_CONFIG.kit_fixups,
		root="/home/drobbins/development/kit-fixups-dr",
	)

	for kit_group in merge.foundations.kit_groups():
		print(kit_group)
