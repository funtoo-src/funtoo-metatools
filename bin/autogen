#!/usr/bin/env python3

import os
import asyncio
import pop.hub

hub = pop.hub.Hub()
hub.pop.sub.add(dyne_name="pkgtools", omit_class=False)
hub.pop.sub.add('pop.mods.conf')

CONFIG = {
	"repo": {
		'default': os.getcwd(),
		'os': 'AUTOGEN_REPOSITORY',
		'help': 'Destination repository path'
	},
	"name": {
		'default': None,
		'os': 'AUTOGEN_REPONAME',
		'help': 'Repository name (to override)'
	}
}

if __name__ == "__main__":
	hub.OPTS = hub.conf.reader.read(CONFIG)
	asyncio.run(hub.pkgtools.autogen.start(hub.OPTS['repo'], name=hub.OPTS['name']))

# vim: ts=4 sw=4 noet
