#!/usr/bin/env python3

import os
import asyncio
import pop.hub
import logging
logging.basicConfig(format='> %(message)s', level=logging.INFO)
logging.info("Funtoo meta-tools autogen")
hub = pop.hub.Hub()
hub.pop.sub.add(dyne_name="pkgtools", omit_class=False)
hub.pop.sub.add('pop.mods.conf')

CONFIG = {
	"start-path": {
		'default': os.getcwd(),
		'os': 'AUTOGEN_START_PATH',
		'help': 'Where to start processing'
	},
	"out-path": {
		'default': None,
		'os': 'AUTOGEN_REPOSITORY_OUTPUT_PATH',
		'help': 'Destination repository path'
	},
	"name": {
		'default': None,
		'os': 'AUTOGEN_REPONAME',
		'help': 'Repository name (to override)'
	}
}

if __name__ == "__main__":
	hub.OPTS = hub.conf.reader.read(CONFIG)
	asyncio.run(hub.pkgtools.autogen.start(hub.OPTS['start-path'], out_path=hub.OPTS['out-path'], name=hub.OPTS['name']))

# vim: ts=4 sw=4 noet
